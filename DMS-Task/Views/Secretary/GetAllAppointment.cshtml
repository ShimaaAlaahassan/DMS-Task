@model List<PatientAppointment>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Patient Appointment list</h1>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Secretary" asp-action="Create" class="btn btn-warning $orange-500">
                <i class="bi bi-person-plus-fill"></i>
                &nbsp; ADD New Appointment

            </a>

        </div>

    </div>
    <br /> <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>BirthDate</th>
                <th>Appointment Date</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>VisitLength</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.FName</td>
                    <td width="50%">@obj.LName</td>
                    <td width="50%">@obj.BirthDate</td>
                    <td width="50%">@obj.AppointmentDate</td>
                    <td width="50%">@obj.StartTime</td>
                    <td width="50%">@obj.EndTime</td>
                    <td width="50%">@obj.VisitLength</td>

                </tr>
            }
        </tbody>
    </table>
</div>